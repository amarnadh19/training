pipeline {
    agent any
    environment {
        playbookFilename = "tomcat-setup.yaml"
    }
    stages {
        stage ("Git Clone"){
            steps {
                git branch: 'main',
                    credentialsId: 'githubamar', url: 'https://github.com/amarnadh19/training.git'
                sh "ls -lat"
            }
        }
        stage ("Job cleanup"){
            steps {
                deleteDir()
            }
        }
    }
    post {
        success {
            echo "JOB executed"
        }
    }
}