pipeline {
    agent any
    parameters {
        string (name: playbookFilename, description: "Please give your playbook file name" )
    }
    stages {
        stage ("Git Clone"){
            steps {
                git branch: 'main',
                    credentialsId: 'traininggit', url: 'https://github.com/amarnadh19/training.git'
                sh "ls -lat"
            }
        }
        stage ("ansible syntax check") {
            steps {
                sh "pwd"
                sh "ansible-playbook -i inventory.ini --syntax-check ${params.playbookFilename}"
            }
        }
        stage ("Run ansible playbook"){
            steps {

            }
        }
        stage ("Job cleanup"){
            steps {
                deleteDir()
            }
        }
    }
    post {
        success {
            echo "JOB executed"
        }
    }
}