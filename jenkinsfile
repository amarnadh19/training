pipeline {
    agent any
    environment {
        playbookFilename = "tomcat-setup.yaml"
    }
    stages {
        stage ("Git Clone"){
            steps {
                git branch: 'main',
                    credentialsId: 'traininggit', url: 'https://github.com/amarnadh19/training.git'
                sh "ls -lat"
            }
        }
        stage ("ansible syntax check") {
            steps {
                sh "pwd"
                sh "ansible-playbook -i inventory.ini --syntax-check ${playbookFilename} --connection=local"
            }
        }
        stage ("ansible run") {
            steps {
               ansiblePlaybook(
                inventory: "inventory.ini",
                playbook: "${playbookFilename}"
               )
            }
        }
        stage ("Job cleanup"){
            steps {
                deleteDir()
            }
        }
    }
    post {
        success {
            echo "JOB executed"
        }
    }
}